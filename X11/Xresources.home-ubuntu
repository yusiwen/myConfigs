! ~/.Xresources is a symbolic link to ~/myConfigs/Xresources

#include "myConfigs/solarized/xresources/solarized"
! #include "myConfigs/base16/base16-xresources/base16-bespin.dark.xresources"

Xft.autohint: true
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: true
Xft.antialias: true
Xft.dpi: 96
Xft.rgba: rgb

URxvt.meta8: true

! URxvt.font:xft:DejaVu Sans Mono:pixelsize=12:antialias=false:autohint=false
! URxvt.italicFont:xft:DejaVu Sans Mono:style=Oblique:pixelsize=12:antialias=false:autohint=false
! URxvt.boldFont:xft:DejaVu Sans Mono:style=Bold:pixelsize=12:antialias=false:autohint=false
! URxvt.boldItalicFont:xft:DejaVu Sans Mono:style=Bold Oblique:pixelsize=12:antialias=false:autohint=false

! URxvt.font: xft:Inconsolata:medium:pixelsize=15,xft:WenQuanYi Zen Hei Mono:pixelsize=12
! URxvt.boldFont: xft:Inconsolata:medium:bold:pixelsize=15,xft:WenQuanYi Zen Hei Mono:bold:pixelsize=12

!URxvt.font: xft:Meslo LG S DZ for Powerline:pixelsize=13,xft:WenQuanYi Zen Hei Mono:pixelsize=13
!URxvt.boldFont: xft:Meslo LG S DZ for Powerline:bold:pixelsize=13,xft:WenQuanYi Zen Hei Mono:bold:pixelsize=13

URxvt.font: xft:Meslo\ LG\ S\ DZ\ for\ Powerline:size=10,xft:WenQuanYi\ Zen\ Hei\ Mono:size=10
URxvt.boldFont: xft:Meslo\ LG\ S\ DZ\ for\ Powerline:bold:size=10,xft:WenQuanYi\ Zen\ Hei\ Mono:bold:size=10

URxvt.intensityStyles: false

URxvt.preeditType: OverTheSpot
URxvt.letterSpace:-2

URxvt.scrollBar: false
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true

URxvt.perl-ext-common:  default,matcher,clipboard
URxvt.url-launcher:     /usr/bin/google-chrome
URxvt.matcher.button:   1

URxvt.keysym.C-Delete:  perl:matcher:last
URxvt.keysym.M-Delete:  perl:matcher:list
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped

URxvt.clipboard.autocopy: true

URxvt.iso14755: False

URxvt.cursorBlink: true
URxvt.saveLines: 1000

! xscreensaver ---------------------------------------------------------------

!font settings
xscreensaver.Dialog.headingFont:        -*-fixed-medium-r-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-fixed-medium-r-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-fixed-medium-r-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-fixed-medium-r-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-fixed-medium-r-*-*-14-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-fixed-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-fixed-medium-r-*-*-14-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #101010
xscreensaver.Dialog.background:         #D8D8D8
xscreensaver.Dialog.topShadowColor:     #D8D8D8
xscreensaver.Dialog.bottomShadowColor:  #D8D8D8
xscreensaver.Dialog.Button.foreground:  #101010
xscreensaver.Dialog.Button.background:  #E5E5E5
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #101010
xscreensaver.Dialog.text.background:    #E5E5E5
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #101010
xscreensaver.passwd.thermometer.background:  #2E2E2E
xscreensaver.passwd.thermometer.width:       8

