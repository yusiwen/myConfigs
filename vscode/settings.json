// Place your settings in this file to overwrite the default settings
{
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.fontFamily": "'Sarasa Mono SC', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "boundary",
  "editor.cursorStyle": "underline",
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",

  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "vim.leader": ",",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.handleKeys": {
    "<C-k>": false
  },

  "java.home": "I:/java/jdk1.8.0_144",

  "rust.mode": "legacy",
  "rust.rustup": {
    "toolchain": "stable-x86_64-pc-windows-gnu"
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue"
  ],

  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "vetur.format.js.InsertSpaceBeforeFunctionParenthesis": true,
  "cmake.configureOnOpen": true,

  "git.path": "G:\\apps\\cmder-v1.3.11\\vendor\\git-for-windows\\bin\\git.exe",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "gitlens.keymap": "alternate",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true
  },

  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
  "terminal.integrated.fontFamily": "Sarasa Term SC",
  "terminal.integrated.fontSize": 12,

  "extensions.ignoreRecommendations": false,

  "workbench.colorTheme": "Material Theme Palenight High Contrast",
  "workbench.iconTheme": "vscode-icons",
  "vsicons.projectDetection.autoReload": true,

  "files.associations": {},
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[javascript]": {
    "editor.defaultFormatter": "xaver.clang-format"
  }
}
